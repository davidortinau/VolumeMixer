<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             xmlns:icon="clr-namespace:VolumeMixer.Resources.Styles"
             xmlns:vm="clr-namespace:VolumeMixer.ViewModels" xmlns:xct="http://xamarin.com/schemas/2020/toolkit" xmlns:c="clr-namespace:VolumeMixer.Converters"
             ios:Page.UseSafeArea="True"
             Background="#999999"
             Shell.NavBarIsVisible="False"
             x:Class="VolumeMixer.Pages.MainPage">

    <ContentPage.BindingContext>
        <vm:MainViewModel/>
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <Style TargetType="Slider">
            <Setter Property="Rotation" Value="-90"/>
            <Setter Property="Minimum" Value="0"/>
            <Setter Property="Maximum" Value="100"/>
            <Setter Property="ThumbColor" Value="Black"/>
            <Setter Property="MinimumTrackColor" Value="#FF3300"/>
            <Setter Property="MaximumTrackColor" Value="#d1d1d1"/>
        </Style>

        <c:ValueChangedEventArgsConverter x:Key="ValueChangedEventArgsConverter"/>
    </ContentPage.Resources>

    <Grid ColumnDefinitions="*,*,*,*" RowDefinitions="80,*,150" Margin="30">
        <Slider Grid.Column="0" Grid.Row="1" Value="{Binding Channel1Volume}"/>
        <Slider Grid.Column="1" Grid.Row="1" Value="{Binding Channel2Volume}"/>
        <Slider Grid.Column="2" Grid.Row="1" Value="{Binding Channel3Volume}"/>
        <Slider Grid.Column="3" Grid.Row="1" Value="{Binding Channel4Volume}"/>

        <Button
            Command="{Binding MuteCommand}" CommandParameter="1"
            BackgroundColor="#FF3300" Grid.Column="0" Grid.Row="2" HorizontalOptions="Center" VerticalOptions="End" CornerRadius="6" WidthRequest="80" HeightRequest="80"/>
        <Button
            Command="{Binding MuteCommand}" CommandParameter="2"
            BackgroundColor="#FF6600" Grid.Column="1" Grid.Row="2" HorizontalOptions="Center" VerticalOptions="End" CornerRadius="6" WidthRequest="80" HeightRequest="80"/>
        <Button
            Command="{Binding MuteCommand}" CommandParameter="3"
            BackgroundColor="#FF9900" Grid.Column="2" Grid.Row="2" HorizontalOptions="Center" VerticalOptions="End" CornerRadius="6" WidthRequest="80" HeightRequest="80"/>
        <Button
            Command="{Binding MuteCommand}" CommandParameter="4"
            BackgroundColor="#FF0000" Grid.Column="3" Grid.Row="2" HorizontalOptions="Center" VerticalOptions="End" CornerRadius="6" WidthRequest="80" HeightRequest="80"/>

        <Button VerticalOptions="Start" HorizontalOptions="End" Grid.ColumnSpan="4"
                WidthRequest="64"
                HeightRequest="64"
                Background="Transparent"
                Margin="-30"
                x:Name="ConnectBtn"
                Command="{Binding ConnectCommand}"
                >
            <Button.ImageSource>
                <FontImageSource FontFamily="FontAwesome"
                                 Glyph="{x:Static icon:IconFont.Server}"
                                 Color="#1d1d1d"/>
            </Button.ImageSource>
        </Button>
    </Grid>

</ContentPage>
